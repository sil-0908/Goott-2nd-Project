<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="video">

	<insert id="insert" parameterType="hashMap" useGeneratedKeys="true" keyProperty="VIDEO_ID">  
	    <![CDATA[
	    insert into VIDEO (TITLE, SUMMARY, VIDEO_URL,IMAGE_URL, CREATE_COUNTRY, CREATE_YEAR, RECOMMAND, GRADE) 
	    values (#{title}, #{summary}, #{url},#{imgurl}, #{country}, #{year}, #{recommand}, #{grade})
	    ]]>
	 </insert> 
	    <!--  비디오 상세 조희 쿼리문 -->
	  <select id="select_detail" parameterType="hashMap" resultType="hashMap">
    <![CDATA[
        select
        TITLE,VIDEO_URL,IMAGE_URL,SUMMARY
        from VIDEO
        where
        VIDEO_ID=#{videoId}
     
		]]>
	  </select>
	 <!--  비디오  전체조희 쿼리문 -->
	  <select id="select_list" parameterType="hashMap" resultType="hashMap">
	    <![CDATA[
		select VIDEO_ID,TITLE,IMAGE_URL,VIDEO_URL
		  from VIDEO
	      where 1=1 
	       
	    ]]>
	 
	  </select>
	    
        

</mapper>